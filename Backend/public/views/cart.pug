extends layout

block content
    h2 Your Shopping Cart
    if cart.length === 0
        p Your cart is empty.
    else
        each item in cart
            .cart-item
                img(src=item.image, alt=item.name)
                p= item.name
                p Quantity: #{item.quantity}
                p Price: $#{item.price}
                button.remove-from-cart(data-id=item._id) Remove
        p Total: $#{total}
        a(href="/checkout") Proceed to Checkout
